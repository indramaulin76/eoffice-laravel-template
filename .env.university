# E-Office Template for Universities
APP_NAME="E-Office Universitas"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://eoffice.university.ac.id

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# University settings
BCRYPT_ROUNDS=12
SESSION_LIFETIME=180
SESSION_ENCRYPT=true

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=eoffice_university
DB_USERNAME=eoffice_user
DB_PASSWORD=secure_password

# Email Configuration for University
MAIL_MAILER=smtp
MAIL_HOST=mail.university.ac.id
MAIL_PORT=587
MAIL_USERNAME=eoffice@university.ac.id
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="eoffice@university.ac.id"
MAIL_FROM_NAME="${APP_NAME}"

# File Storage
FILESYSTEM_DISK=local
# Large files for academic documents
# Consider using S3 for better performance

# Cache Configuration
CACHE_STORE=database
QUEUE_CONNECTION=database

# Redis Configuration (if available)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=info

# University specific
# Integration with SIAKAD or other academic systems
# SIAKAD_API_URL=https://siakad.university.ac.id/api
# SIAKAD_API_KEY=your_siakad_api_key
