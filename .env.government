# E-Office Template for Government Agencies
APP_NAME="E-Office Instansi Pemerintah"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://your-domain.go.id

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Enhanced security for government
BCRYPT_ROUNDS=12
SESSION_LIFETIME=60
SESSION_ENCRYPT=true

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=eoffice_government
DB_USERNAME=eoffice_user
DB_PASSWORD=secure_password

# Email Configuration for Government
MAIL_MAILER=smtp
MAIL_HOST=mail.your-domain.go.id
MAIL_PORT=587
MAIL_USERNAME=noreply@your-domain.go.id
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.go.id"
MAIL_FROM_NAME="${APP_NAME}"

# File Storage
FILESYSTEM_DISK=local
# For production, consider using S3 or similar
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=ap-southeast-1
# AWS_BUCKET=your-bucket-name

# Cache Configuration
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=warning
